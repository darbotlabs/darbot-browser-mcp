{
  "name": "@darbotlabs/darbot-browser-mcp-hosted",
  "version": "1.3.0",
  "description": "Darbot Browser MCP - On-Premises Hosted Edition with MSAL and Dev Tunnel",
  "type": "module",
  "main": "../index.js",
  "types": "../index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node ../cli.js --headless --browser chromium --port 8080",
    "dev": "tsx watch src/server.ts",
    "docker:build": "docker build -t darbot-browser-hosted -f Dockerfile ..",
    "docker:run": "docker run -d --name darbot-browser-hosted -p 8080:8080 --env-file .env darbot-browser-hosted",
    "docker:stop": "docker stop darbot-browser-hosted && docker rm darbot-browser-hosted",
    "docker:logs": "docker logs -f darbot-browser-hosted",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "tunnel:setup": "bash scripts/setup-tunnel.sh",
    "tunnel:start": "code tunnel --name ${TUNNEL_NAME:-darbot-browser-mcp} --accept-server-license-terms",
    "tunnel:stop": "pkill -f 'code tunnel'",
    "health": "curl -f http://localhost:8080/health",
    "lint": "eslint src/ --ext .ts",
    "test": "echo 'Tests to be implemented'"
  },
  "keywords": [
    "mcp",
    "browser",
    "automation",
    "msal",
    "dev-tunnel",
    "on-premises",
    "hosted",
    "docker",
    "playwright"
  ],
  "author": "DarbotLabs",
  "license": "Apache-2.0",
  "dependencies": {
    "@azure/msal-node": "^2.15.0",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "commander": "^13.1.0",
    "debug": "^4.4.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "mime": "^4.0.7",
    "playwright": "1.55.0-alpha-1752540053000",
    "playwright-core": "1.55.0-alpha-1752540053000",
    "winston": "^3.17.0",
    "ws": "^8.18.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.13.10",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=23"
  }
}
