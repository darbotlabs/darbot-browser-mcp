{
  "name": "darbot-browser-mcp",
  "displayName": "ðŸ¤– Darbot Browser MCP",
  "description": "Your autonomous browser companion for VS Code. 29 AI-driven autonomous browser tools with Microsoft Edge work profile support and enhanced GitHub Copilot Chat integration for agent mode.",
  "version": "1.3.0",
  "publisher": "darbotlabs",
  "engines": {
    "vscode": "^1.96.0"
  },
  "icon": "icon.png",
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "keywords": [
    "mcp",
    "browser",
    "autonomous",
    "darbot",
    "automation",
    "testing",
    "screenshot",
    "copilot",
    "ai",
    "edge",
    "chrome",
    "web-automation",
    "playwright",
    "selenium-alternative",
    "browser-testing",
    "accessibility",
    "work-profiles",
    "session-management",
    "github-copilot",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darbotlabs/darbot-browser-mcp.git"
  },
  "homepage": "https://github.com/darbotlabs/darbot-browser-mcp",
  "bugs": {
    "url": "https://github.com/darbotlabs/darbot-browser-mcp/issues"
  },
  "license": "Apache-2.0",
  "main": "./out/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "darbot-browser-mcp",
        "label": "Darbot Browser MCP"
      }
    ],
    "commands": [
      {
        "command": "darbot-browser-mcp.startServer",
        "title": "Start Browser MCP Server",
        "category": "Darbot Browser MCP"
      },
      {
        "command": "darbot-browser-mcp.stopServer",
        "title": "Stop Browser MCP Server",
        "category": "Darbot Browser MCP"
      },
      {
        "command": "darbot-browser-mcp.restartServer",
        "title": "Restart Browser MCP Server",
        "category": "Darbot Browser MCP"
      },
      {
        "command": "darbot-browser-mcp.showStatus",
        "title": "Show Server Status",
        "category": "Darbot Browser MCP"
      }
    ],
    "configuration": {
      "title": "Darbot Browser MCP",
      "properties": {
        "darbot-browser-mcp.serverPath": {
          "type": "string",
          "default": "npx github:pantelisbischitzis/darbot-browser-mcp",
          "description": "Path or command to start the Browser MCP server"
        },
        "darbot-browser-mcp.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the Browser MCP server when VS Code starts"
        },
        "darbot-browser-mcp.autoConfigureMCP": {
          "type": "boolean",
          "default": true,
          "description": "Automatically configure MCP settings when the extension is first activated. This setting is deprecated and only exists for historical reasons; MCP server registration is now handled automatically via the McpServerDefinitionProvider API.",
          "deprecationMessage": "This setting is deprecated and only exists for historical reasons. MCP server registration is now handled automatically via the McpServerDefinitionProvider API."
        },
        "darbot-browser-mcp.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Log level for the Browser MCP server"
        },
        "darbot-browser-mcp.browser": {
          "type": "string",
          "default": "msedge",
          "enum": [
            "msedge",
            "msedge-beta",
            "msedge-dev",
            "msedge-canary",
            "chrome",
            "chrome-beta",
            "chrome-dev",
            "chrome-canary",
            "firefox",
            "firefox-developer",
            "firefox-nightly",
            "webkit"
          ],
          "enumDescriptions": [
            "Microsoft Edge (Stable)",
            "Microsoft Edge Beta",
            "Microsoft Edge Dev",
            "Microsoft Edge Canary",
            "Google Chrome (Stable)",
            "Google Chrome Beta",
            "Google Chrome Dev (Unstable)",
            "Google Chrome Canary",
            "Mozilla Firefox (Stable)",
            "Firefox Developer Edition",
            "Firefox Nightly",
            "WebKit (Safari Technology Preview)"
          ],
          "description": "Browser channel to use for automation. Playwright will attempt to auto-detect the browser installation."
        },
        "darbot-browser-mcp.browserExecutablePath": {
          "type": "string",
          "default": "",
          "description": "Custom path to browser executable. Use this if auto-detection fails or you want to use a specific browser installation. Leave empty for auto-detection. Example: C:\\Program Files\\Microsoft\\Edge Dev\\Application\\msedge.exe"
        },
        "darbot-browser-mcp.headless": {
          "type": "boolean",
          "default": false,
          "description": "Run browser in headless mode (no visible window)"
        },
        "darbot-browser-mcp.noSandbox": {
          "type": "boolean",
          "default": true,
          "description": "Disable sandbox for browser processes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "^22.13.10",
    "typescript": "^5.8.2"
  }
}
