{
  "manifest_version": 3,
  "name": "Darbot Browser MCP Bridge",
  "version": "1.3.0",
  "description": "Share browser tabs with Darbot Browser MCP server through Chrome DevTools Protocol (CDP) bridge for AI-driven browser automation",

  "minimum_chrome_version": "88",

  "permissions": [
    "debugger",
    "activeTab",
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_title": "Share tab with Darbot Browser MCP",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
